{
  "name": "roguetype-highlight",
  "description": "Highlight the world types of Roguetype for a cosier adventure.",
  "version": "0.0.1",
  "publisher": "dalps",
  "license": "MIT",
  "engines": {
    "vscode": "^1.73.0"
  },
  "repository": {
    "url": "https://github.com/dalps/roguetype-highlight"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:ocaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "colors": [
      {
        "id": "roguetypeHighlight.mountain",
        "description": "Background color for mountains",
        "defaults": {
          "light": "#666666bf",
          "dark": "#666666bf"
        }
      },
      {
        "id": "roguetypeHighlight.forest",
        "description": "Background color for forest",
        "defaults": {
          "light": "#00c724bf",
          "dark": "#00c724bf"
        }
      },
      {
        "id": "roguetypeHighlight.gateBg",
        "description": "Background color for gate",
        "defaults": {
          "light": "#ff000066",
          "dark": "#ff000066"
        }
      },
      {
        "id": "roguetypeHighlight.gateBorder",
        "description": "Border color for gate",
        "defaults": {
          "light": "#ff0000",
          "dark": "#ff0000"
        }
      },
      {
        "id": "roguetypeHighlight.doorBg",
        "description": "Background color for doors",
        "defaults": {
          "light": "#00ff0066",
          "dark": "#00ff0066"
        }
      },
      {
        "id": "roguetypeHighlight.doorBorder",
        "description": "Border color for doors",
        "defaults": {
          "light": "#00ff00",
          "dark": "#00ff00"
        }
      },
      {
        "id": "roguetypeHighlight.altarBg",
        "description": "Background color for altar",
        "defaults": {
          "light": "#ff00e166",
          "dark": "#ff00e166"
        }
      },
      {
        "id": "roguetypeHighlight.altarBorder",
        "description": "Border color for altar",
        "defaults": {
          "light": "#ff00e1",
          "dark": "#ff00e1"
        }
      },
      {
        "id": "roguetypeHighlight.kobold",
        "description": "Text color for kobold",
        "defaults": {
          "light": "#ff4500",
          "dark": "#ff4500"
        }
      },
      {
        "id": "roguetypeHighlight.goblin",
        "description": "Text color for goblin",
        "defaults": {
          "light": "#ea3a15",
          "dark": "#ea3a15"
        }
      },
      {
        "id": "roguetypeHighlight.orc",
        "description": "Text color for orc",
        "defaults": {
          "light": "#d52e2b",
          "dark": "#d52e2b"
        }
      },
      {
        "id": "roguetypeHighlight.ogre",
        "description": "Text color for ogre",
        "defaults": {
          "light": "#c02240",
          "dark": "#c02240"
        }
      },
      {
        "id": "roguetypeHighlight.troll",
        "description": "Text color for troll",
        "defaults": {
          "light": "#aa1755",
          "dark": "#aa1755"
        }
      },
      {
        "id": "roguetypeHighlight.dragon",
        "description": "Text color for dragon",
        "defaults": {
          "light": "#950b6b",
          "dark": "#950b6b"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^20",
    "@types/vscode": "^1.73.0",
    "eslint": "^9.13.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  }
}
